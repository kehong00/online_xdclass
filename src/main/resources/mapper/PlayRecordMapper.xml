<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.codewoo.mapper.PlayRecordMapper">
    <resultMap id="BaseResultMap" type="cn.codewoo.entity.PlayRecord">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="video_id" jdbcType="INTEGER" property="videoId"/>
        <result column="current_num" jdbcType="INTEGER" property="currentNum"/>
        <result column="episode_id" jdbcType="INTEGER" property="episodeId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <insert id="save" parameterType="cn.codewoo.entity.PlayRecord">
        <selectKey keyColumn="id" resultType="INTEGER" order="AFTER">
            SELECT LAST_INSERT_ID();
        </selectKey>
        INSERT INTO `online_xdclass`.`play_record`(`user_id`, `video_id`, `current_num`, `episode_id`, `create_time`)
        VALUES (#{userId}, #{videoId}, #{currentNum}, #{episodeId},#{createTime});
    </insert>
</mapper>